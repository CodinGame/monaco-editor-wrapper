{
  "extends": "@codingame/tsconfig",
  "compilerOptions": {
    "baseUrl": "./app",
    "noImplicitOverride": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "noEmit": true,
    "paths": {
      "app/*": [
        "*"
      ]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["src", "update-extensions.ts", "rollup.config.ts"],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}